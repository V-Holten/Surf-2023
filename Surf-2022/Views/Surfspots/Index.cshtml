@addTagHelper "Microsoft.AspNetCore.Mvc.TagHelpers.FormTagHelper, Microsoft.AspNetCore.Mvc.TagHelpers"
@model IEnumerable<Surf_2022.Models.Surfspots>

@{
    ViewData["Title"] = "Surfspots";
}
<fieldset class="surfspot bg-1">
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table bg-1">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lattitude)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Longtitude)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lattitude)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Longtitude)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</fieldset>
