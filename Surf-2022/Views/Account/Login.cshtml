@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Surf_2022.Models.LoginViewModel


<fieldset class="account">

    <h1>Login</h1>
    <br />
    <form role="form" asp-action="Login">

        <div asp-validation-summary="All" class="input-validation-error"></div>

        <div class="form-group bg-1">
            <label asp-for="UserName"></label>
            <input type="text" asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="field-validation-error"></span>
        </div>

        <div class="form-group bg-1">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="field-validation-error"></span>
        </div>


        <div>
            <label>&nbsp;</label>
            <button type="submit" class="btn btn-primary">Login</button>
        </div>

    </form>

    <br />

    <div class="form-group">
        <label>Not Registered?</label>
        <a asp-action="Register">Create a new account</a>
    </div>

</fieldset>